<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    android:background="#C5C5E3"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Space
        android:id="@+id/space1ID"
        android:layout_width="match_parent"
        android:layout_height="15dp" />

    <TextView
        android:id="@+id/englishTxtID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hello"
        android:textSize="25sp"
        android:textAlignment="center"
        android:padding="10dp"
        android:background="#F7EC35"
         />

    <Space
        android:id="@+id/space2ID"
        android:layout_width="match_parent"
        android:layout_height="15dp" />

    <TextView
        android:id="@+id/germanTxtID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hallo"
        android:textAlignment="center"
        android:textSize="25sp"
        android:padding="10dp"
        android:background="#FC0CF7"
        />

    <Space
        android:id="@+id/space3ID"
        android:layout_width="match_parent"
        android:layout_height="15dp"/>

    <TextView
        android:id="@+id/frenchTxtID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bonjour"
        android:textAlignment="center"
        android:textSize="25sp"
        android:padding="10dp"
        android:background="#05B158"
        />

</LinearLayout>