<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/clickTxtID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Click on ImageButton Below :"
        android:textSize="20sp"
        android:layout_marginTop="100dp"
        android:layout_marginStart="40dp"
         />
    <ImageButton
        android:id="@+id/clickBtnID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/my_button"
        android:layout_below="@id/clickTxtID"
        android:layout_marginStart="100dp"
        android:layout_marginTop="50dp"
        android:onClick="onClickImageButton"
        />

    <TextView
        android:id="@+id/onClickTxtID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="20sp"
        android:layout_below="@id/clickBtnID"
        android:layout_marginTop="50dp"
        android:layout_marginStart="40dp"
        />

</RelativeLayout>