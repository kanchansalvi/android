<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/rateTxtID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rate your stay : "
        android:textSize="30sp"
        android:layout_marginTop="100dp"
        android:layout_marginStart="30dp"
        />

    <RatingBar
        android:id="@+id/stayRatingBarID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:stepSize="0.5"
        android:layout_marginTop="30dp"
        android:layout_marginStart="50dp"
        android:layout_below="@id/rateTxtID"
        />

    <Button
        android:id="@+id/submitBtnID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:textSize="20sp"
        android:layout_below="@id/stayRatingBarID"
        android:layout_marginStart="100dp"
        android:layout_marginTop="20dp"
        android:onClick="onSubmit"
        />

    <TextView
        android:id="@+id/stayTxtID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="20dp"
        android:layout_below="@id/submitBtnID"
        android:layout_marginStart="50dp"
        android:layout_marginTop="30dp"
        />

</RelativeLayout>