<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/scoreTxtID"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="Your Score : "
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#050509"
        android:layout_marginTop="200dp"
        android:layout_marginStart="50dp"/>

    <SeekBar
        android:id="@+id/percentSeekID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/scoreTxtID"
        android:layout_marginTop="20dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:padding="15dp"
        android:background="#F7C28B"
        android:max="10"
        />

    <TextView
        android:id="@+id/displayTxtID"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Seeking..."
        android:textSize="20dp"
        android:textColor="#0000CC"
        android:padding="10dp"
        android:layout_below="@id/percentSeekID"
        android:layout_marginTop="20dp"
        android:layout_marginStart="70dp"/>

</RelativeLayout>