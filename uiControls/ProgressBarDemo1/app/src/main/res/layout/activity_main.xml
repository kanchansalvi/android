<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/progressStatusTxtID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Press button to start Download"
        android:layout_marginTop="280dp"
        android:layout_marginStart="50dp"
        android:textSize="20dp"
        android:textStyle="bold"
        />

    <ProgressBar
        android:id="@+id/progressPBarID"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:visibility="visible"
        android:indeterminate="false"
        android:max="100"
        android:progress="1"
        android:padding="20dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/progressStatusTxtID"
        style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
        />

    <Button
        android:id="@+id/downloadBtnID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Download"
        android:textAllCaps="false"
        android:textSize="25sp"
        android:padding="10dp"
        android:layout_below="@+id/progressPBarID"
        android:layout_marginTop="50dp"
        android:layout_marginStart="100dp"
        android:onClick="clickDownload"
        />

</RelativeLayout>